<Window
    x:Class="AvaloniaElmInspiredOne.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ElmInspiredOne;assembly=ElmInspiredOne"
    Title="Elm Architecture Sample One"
    MinWidth="400"
    MinHeight="100"
    d:DataContext="{x:Static model:Program.d}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5">
            Current:
        </TextBlock>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            IsReadOnly="True"
            Text="{Binding Current, Mode=OneWay}" />

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Command="{Binding Increment}">
            Increment
        </Button>
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Command="{Binding Decrement}">
            Decrement
        </Button>
    </Grid>
</Window>